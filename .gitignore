
# Local .terraform directories
**/.terraform/*

# Terraform state files
*.tfstate
*.tfstate.*

# Terraform plan output files (result of terraform plan -out=tfplan)
*.tfplan

# Crash log files
crash.log
crash.*.log

# Exclude all .tfvars files (potentially sensitive data, such as passwords, private keys, etc.)
*.tfvars
*.tfvars.json

# Ignore override files (used for local overrides of resources)
override.tf
override.tf.json
*_override.tf
*_override.tf.json

# Include specific override files if needed (uncomment the line below to add specific override files to version control)
# !example_override.tf

# Ignore Terraform CLI configuration files
.terraformrc
terraform.rc

# IDE-specific files
.vscode/
.idea/

# AWS credentials and environment files
.aws/
.env

# Logs generated by Terraform and other tools
*.log
